<?xml version='1.0' encoding='UTF-8' ?>
<!-- was: <?xml version="1.0" encoding="UTF-8"?> -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">

    <bean class="org.springframework.web.servlet.mvc.support.ControllerClassNameHandlerMapping"/>

    <!--
    Most controllers will use the ControllerClassNameHandlerMapping above, but
    for the index controller we are using ParameterizableViewController, so we must
    define an explicit mapping for it.
    -->
    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="index.htm">indexController</prop>
                <prop key="menuView.htm">menuController</prop>
                <prop key="myOrders.htm">myOrdersController</prop>
                <prop key="manageUsers.htm">manageUsersController</prop>
                <prop key="registration.htm">registrationController</prop>
                <prop key="login.htm">loginController</prop>
                <prop key="manageOrders.htm">orderManageController</prop>
                <prop key="/area/*">areaManageController</prop>
                <prop key="manageAreaPackages.htm">areaManageController</prop>
                <prop key="manageAreas.htm">areaManageController</prop>
                <prop key="managePackages.htm">packageController</prop>  
                
                <prop key="createfood.htm">foodController</prop>
                <prop key="availability.htm">availabilityController</prop>  
                <prop key="deletefood.htm">deleteFoodController</prop>
                <prop key="commit.htm">commitController</prop>
                <prop key="findfood.htm">findController</prop>
                <prop key="editfood.htm">updateController</prop>
                <prop key="editavailability.htm">upavController</prop>
            </props>
        </property>
    </bean>

    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.InternalResourceViewResolver"
          p:prefix="/WEB-INF/jsp/"
          p:suffix=".jsp" />

    <!--
    The index controller.
    -->
    <bean name="indexController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="index" />
    <bean name="menuController"
            class="org.springframework.web.servlet.mvc.ParameterizableViewController"
            p:viewName="menuView" />
    <bean name="myOrdersController"
            class="org.springframework.web.servlet.mvc.ParameterizableViewController"
            p:viewName="myOrders" />
    <bean name="registrationController"
            class="org.springframework.web.servlet.mvc.ParameterizableViewController"
            p:viewName="registration" />
    <bean name="loginController"
            class="org.springframework.web.servlet.mvc.ParameterizableViewController"
            p:viewName="login" />

    <bean name="manageUsersController"
            class="org.springframework.web.servlet.mvc.ParameterizableViewController"
            p:viewName="manageUsers" />
    
    <bean name="orderManageController"
      class="controller.OrderController" />
    
    <bean name="areaManageController"
      class="controller.AreaManagementController" />
    
     <bean name="packageController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="managePackages" />
    
   
     
     <bean name="foodController"
          class="controller.FoodItemController"
          p:formView="createfood"
          p:validator-ref="foodValidator"
    />
     
     <bean name="deleteFoodController"
          class="controller.DeleteFoodController"
          p:formView="deletefood"          
    />
     
     <bean name="availabilityController"
          class="controller.AvailabilityController"
          p:formView="availability"  
          p:validator-ref="availabilityValidator"        
    />
     
      <bean name="commitController"
          class="controller.CommitController"
          p:formView="commit"  
                 
    />
      
      
     <bean name="findController"
          class="controller.EditClass"
          p:formView="findfood"  
               
    />
     
      <bean name="updateController"
          class="controller.UpdateClass"
          p:formView="editfood"  
          p:validator-ref="foodValidator"        
    />
      
      <bean name="upavController"        
          class="controller.EditAvailability"
          p:formView="editavailability"  
          p:validator-ref="foodValidator"        
    />
    
      
   <bean id="availabilityValidator" class="Validator.AvailabilityValidator" />
   
   <bean id="foodValidator" class="Validator.FoodItemValidator" />
   
  
   <!--
        Adding the Resource Bundles
   -->
    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource" p:basename="messages" />
    
</beans>